# ─────────────────────────────────────────────
# DnD DM App — Environment Variables Reference
# Copy to .env.local for local overrides.
# ─────────────────────────────────────────────

# ── Feature flags ────────────────────────────
# All default to false (off). Set to "true" to enable.

# Auth (NextAuth + Supabase login)
# Requires: npm install next-auth @supabase/supabase-js @supabase/ssr
# Also requires: SUPABASE_* vars below, and re-enabling _disabled/auth
NEXT_PUBLIC_FEATURE_AUTH=false

# Supabase real-time cloud sync
# Requires: FEATURE_AUTH=true and the Supabase vars below
NEXT_PUBLIC_FEATURE_SUPABASE_SYNC=false

# Encounter session export (completed encounter → formatted log)
NEXT_PUBLIC_FEATURE_SESSION_EXPORT=false

# ── Supabase (only needed when features above are enabled) ───
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=

# ── NextAuth (only needed when FEATURE_AUTH=true) ───────────
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=
